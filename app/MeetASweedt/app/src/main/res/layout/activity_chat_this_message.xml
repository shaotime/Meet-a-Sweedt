<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_this_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:visibility="gone"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_this_translate_layout"
        android:layout_below="@+id/chat_this_main"
        android:visibility="gone">

        <Button
            android:text="Translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:minHeight="30dp"
            android:minWidth="44dip"
            android:id="@+id/chat_this_translate_button" />

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/chat_this_spinner"
            android:layout_width="200dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_below="@+id/chat_this_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/chat_this_main">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/chat_background_this"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/chat_this_background"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="7dp">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/chat_this"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:text="testhbdaiubsiudbasiubdasbiudbuasbduibausbduibiusabuidusaibdiasubd"
                android:textSize="20sp"
                android:textColor="@android:color/background_light"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat_this_background"
            android:layout_marginRight="-70dp"
            android:layout_centerVertical="true"
            android:id="@+id/chat_this_message_time"
            android:visibility="invisible">

            <TextView
                android:text="08:15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_this_time"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:layout_marginBottom="-2dp" />

            <TextView
                android:text="14/5-2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_this_date"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/chat_this_time"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:layout_marginTop="-2dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>